%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'uk-form uk-form-stacked') do |f|
  .uk-form-row
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  .uk-form-row
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: "off"
  - if devise_mapping.rememberable?
    .uk-form-row
      %label
        = f.check_box :remember_me
        = f.label :remember_me
  .actions.uk-form-row
    = f.submit "Log in", class: 'uk-button uk-button-primary'
= render "devise/shared/links"
